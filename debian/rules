#!/usr/bin/make -f

export PYBUILD_NAME=nautilus-open-any-terminal

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Compile GSettings schemas
	mkdir -p debian/nautilus-open-any-terminal/usr/share/glib-2.0/schemas

override_dh_install:
	dh_install

override_dh_installdeb:
	dh_installdeb
	# Add postinst trigger to compile schemas
	echo "glib-compile-schemas /usr/share/glib-2.0/schemas" >> debian/nautilus-open-any-terminal/DEBIAN/postinst || true
